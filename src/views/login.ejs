<%- include('includes/head')%>
<%- include('includes/navbar')%>


<div class="container">

  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faca Login ou crie sua conta</p>
      <%- include('includes/messages');%>
      <div class="row">
        <div class="col-lg my-5">
          <h4>Faca seu cadastro</h4>
          <p>Se voce ainda nao tem conta, crie sua conta abaixo</p>

          <form  class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="text" class="form-control validar" name="email">
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control validar" name="password">
            </div>
           
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>

        </div>

        <div class="col-lg my-3">
          <h4>Fazer login</h4>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">  
              <label class="form-label">Email</label>
              <input type="text" class="form-control validar" name="email">
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control validar" name="password">
            </div>
           
            <button type="submit" class="btn btn-primary">Login</button>
          </form>

        </div>



      </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer')%>
